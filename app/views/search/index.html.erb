<div class="container">
  <h3 class="mt-3 mb-3 ">Search Results</h3>
  <h7 class="mt-3">
    <hr class="btn-primary">
    <%= @results.count %>
    results found
  </h7>
  <div class="row">
    <% if !@results.blank? %>
      <% @results.each do |result| %>
        <div class="col-md-6 mb-4 mt-3">
          <div class="card h-100 border border-dark">
            <div class="card-body">
              <h2 class="card-title"><%= result.try(:highlight).try(:subject) ? result.highlight.subject[0].html_safe : result.subject%>
              </h2>
              <p class="card-text">
                <%= result.try(:highlight).try(:content) ? result.highlight.content[0].html_safe : result.content%>
              </p>
            </div>
            <div class="card-footer">
              <li class="btn btn-primary"><%= link_to "More Info", micropost_path(result.id), class:"text-white" %></li>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="center-screen">
        <h2 class="jumbotron border border-dark">
          No results found, please try again!
        </h2>
      </div>
    <% end %>
  </div>
