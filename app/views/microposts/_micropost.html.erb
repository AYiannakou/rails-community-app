<div class="container">
  <h3 class="mt-3 mb-3 ml-2">
    Most Recent Posts
  </h3>
  <hr class="btn-primary">
<div class="row">
<% if @microposts.any? %>
  <% @microposts.each do |micropost| %>
  <div class="col-md-6 mb-4">
    <div class="card h-100 border border-dark">
      <div class="card-body">
        <h2 class="card-title"><%= micropost.subject %></h2>
        <p class="card-text"><%= micropost.content %></p>
      </div>
      <div class="card-footer">
        <li class="btn btn-primary"><%= link_to "More Info", micropost_path(micropost.id), class:"text-white" %></li>
        <h6 class="float-right mt-2">   Posted on
          <%= micropost.created_at.strftime("%b %d, %Y") %>
        </h3>
      </div>
    </div>
  </div>
  <% end %>
<% end %>
</div>
